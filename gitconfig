  ci = commit
  co = checkout
  br = branch
  di = diff
  dc = diff --cached
  dw = diff --word-diff
  amend = commit --amend
  aa = add --all
  head = !git l -1
  h = !git head
  r = !git --no-pager l -20
  ra = !git r --all
  l = log --graph --abbrev-commit --date=relative
  la = !git l --all
  div = divergence
  fa = fetch --all -p
  x = !gitx
[color]
  ui = auto
  branch = auto
  diff = auto
  interactive = auto
  status = auto
[core]
  editor = vim -f
  autocrlf = input
  ignorecase = false
  excludesfile = /Users/dak/.gitignore_global
[apply]
  whitespace = nowarn
[format]
